{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "lib": ["esnext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "isolatedModules": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["./src/utils/*"],
    },
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
